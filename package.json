{
  "name": "roosterjs",
  "version": "7.0.0",
  "description": "Framework-independent javascript editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/roosterjs"
  },
  "license": "MIT",
  "scripts": {
    "checkDependency": "node tools/checkDependency.js",
    "clean": "rimraf dist",
    "copysample": "node tools/copy-sample-code.js",
    "dts": "node tools/dts.js",
    "tslint": "node node_modules/tslint/bin/tslint --project tools/tsconfig.tslint.json",
    "normalize": "node tools/normalize-packages.js",
    "pack": "node tools/pack.js && node tools/pack.js -amd -e",
    "pack:prod": "node tools/pack.js -p && node tools/pack.js -p -amd -e",
    "b": "npm run clean && npm run normalize && node tools/build-all.js",
    "build": "npm run b && npm run tslint && npm run pack && npm run pack:prod && npm run dts && npm run copysample",
    "start": "webpack-dev-server",
    "test": "npm run b && karma start",
    "test:debug": "npm run b && karma start --no-single-run",
    "publish": "node tools/publish-all.js"
  },
  "devDependencies": {
    "@types/jasmine": "2.6.0",
    "glob": "7.1.2",
    "jasmine-core": "2.8.0",
    "karma": "2.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-jasmine": "1.1.1",
    "karma-phantomjs-launcher": "1.0.4",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "3.0.0",
    "ncp": "2.0.0",
    "rimraf": "2.6.2",
    "toposort": "1.0.4",
    "ts-loader": "4.2.0",
    "tslint": "5.9.1",
    "tslint-eslint-rules": "5.1.0",
    "tslint-microsoft-contrib": "5.0.3",
    "typescript": "2.8.3",
    "webpack": "4.5.0",
    "webpack-cli": "2.0.14",
    "webpack-dev-server": "3.1.3"
  }
}
